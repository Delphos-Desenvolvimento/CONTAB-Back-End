// schema.prisma

datasource db {
  provider = "mysql"
  url      = "mysql://root:senha123@192.168.0.117:3306/teste?schema=public"
}

generator client {
  provider = "prisma-client-js"
}

model Img {
  id        Int       @id @default(autoincrement())
  url       String?
  base64    String    @db.LongText
  altText   String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

}

model News {
  id          Int       @id @default(autoincrement())
  title       String
  content     String
  published   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

}

model NewsImg {
  id      Int   @id @default(autoincrement())
  newsId  Int
  imgId   Int

}

model Info {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

}

model Admin {
  id        Int      @id @default(autoincrement())
  user      String   @unique
  password  String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}

model InfoImg {
  id     Int  @id @default(autoincrement())
  infoId Int
  imgId  Int
}
